<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:keepScreenOn="true">
    <RelativeLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.media3.ui.PlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:use_controller="false" />
        <ImageView
            android:id="@+id/artworkView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:backgroundTint="@color/clear"
            android:visibility="gone"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <View
            android:id="@+id/leftView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
        <RelativeLayout
            android:id="@+id/middleView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rightView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dimBlack"
        android:visibility="gone">
        <ImageButton
            android:id="@+id/playPauseRestartButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:padding="5dp"
            android:backgroundTint="@color/clear"
            tools:ignore="ContentDescription" />
        <com.google.android.material.slider.Slider
            android:id="@+id/progressSlider"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:valueFrom="0"
            app:haloRadius="0dp"
            app:labelBehavior="gone"
            app:thumbRadius="0dp"
            app:trackColorActive="@color/lightGrey"
            app:trackColorInactive="@color/darkGrey"
            app:trackHeight="3dp" />
        <TextView
            android:id="@+id/timeView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:paddingLeft="15dp"
            android:paddingBottom="40dp"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textAllCaps="false" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/titleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/menuButtons"
                android:gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textAllCaps="false" />
            <LinearLayout
                android:id="@+id/menuButtons"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">
                <androidx.mediarouter.app.MediaRouteButton
                    android:id="@+id/castButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1" />
                <ImageButton
                    android:id="@+id/repeatButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/media3_icon_repeat_all"
                    android:backgroundTint="@color/clear"
                    tools:ignore="ContentDescription" />
                <ImageButton
                    android:id="@+id/shareButton"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:src="@drawable/media3_icon_share"
                    android:backgroundTint="@color/clear"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/errorView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:paddingTop="20dp"
            android:text="Notice"
            android:textColor="@color/white"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:autoLink="web"
            android:text="Due to a change on YouTube\'s server end, it appears that your ip has been blocked from direct connections. In order for YT Player to work you will need to use an app such as Cloudflare WARP: https://play.google.com/store/apps/details?id=com.cloudflare.onedotonedotonedotone"
            android:textColor="@color/white"
            android:textAllCaps="false"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</RelativeLayout>